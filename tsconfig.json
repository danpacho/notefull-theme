{
    "extends": "./tsconfig.path.json",
    "compilerOptions": {
        "strict": true,
        "allowJs": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "sourceMap": true,
        "incremental": true,
        "importHelpers": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "lib": ["dom", "dom.iterable", "esnext", "ES2017"],
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["src", ".next/types/**/*.ts"],
    "exclude": ["dist", ".next", "node_modules"]
}
